<!-- TinyHAL configuration file for Motorola Defy-->
<tinyhal>
<!--
We are able to have most of our routing static so do that
-->
<path>
    <!-- stdac on -->
    <ctl name="CPCAP Mixer Stereo DAC" val="1"/>
    <ctl name="CPCAP Mixer Voice Codec" val="0"/>
    <ctl name="CPCAP Mixer External PGA" val="0"/>

    <ctl name="Ext Volume" val="12"/>
    <ctl name="Codec Volume" val="12"/>
    <ctl name="STDac Volume" val="12"/>

<!-- Disable mic by default -->
    <ctl name="MIC1 Gain" val="0"/>
    <ctl name="MIC2 Gain" val="0"/>
    <ctl name="Analog External Left Capture Route" val="Off"/>
    <ctl name="Analog External Right Capture Route" val="Off"/>
    <ctl name="Analog Left Capture Route" val="Off"/>
    <ctl name="Analog Right Capture Route" val="Off"/>

</path>

<device name="speaker">
    <path name="on">
	<ctl name="LDSPLEXT Switch" val="1"/>
	<ctl name="LDSPREXT Switch" val="1"/>
	<ctl name="LDSPLDAC Switch" val="1"/>
	<ctl name="LDSPRDAC Switch" val="1"/>
	<ctl name="LDSPLCDC Switch" val="1"/>
	<ctl name="LDSPRCDC Switch" val="1"/>
    </path>
    <path name="off">
	<ctl name="LDSPLEXT Switch" val="0"/>
	<ctl name="LDSPREXT Switch" val="0"/>
	<ctl name="LDSPLDAC Switch" val="0"/>
	<ctl name="LDSPRDAC Switch" val="0"/>
	<ctl name="LDSPLCDC Switch" val="0"/>
	<ctl name="LDSPRCDC Switch" val="0"/>
    </path>
</device>

<device name="builtin-mic">
   <path name="on">
	<ctl name="Analog Left Capture Route" val="Mic2"/>
	<ctl name="Analog Right Capture Route" val="Mic1"/>
	<ctl name="MIC1 Gain" val="31"/>
	<ctl name="MIC2 Gain" val="31"/>
    </path>
    <path name="off">
	<ctl name="MIC1 Gain" val="0"/>
	<ctl name="MIC2 Gain" val="0"/>
	<ctl name="Analog Left Capture Route" val="Off"/>
	<ctl name="Analog Right Capture Route" val="Off"/>
    </path>
</device>

